@import 'utils.styl'
@import 'fonts.styl'

$orange = #e85014
$lead = #34342b


				
mobileHolder()
	.logo
		none()
	.controls
		padding-left 46px		
		.toggle
			span
				roundborder(2px)
				padding 2px 10px 3px 10px
				background-color $orange
			&:before
				block-absolute()
				set_font(vz, 20px, 20px, $orange)
				top 12px
				left -34px
				content '\e077'				
			&:after
				block-absolute()
				dimensions(36px, 36px)
				roundborder(30px)
				border 2px solid #fff
				top 2px
				left -46px
				content ''
			&.playing
				&:before
					left 24px
					content '\e078'
		a
			display inline-block
			margin-left 0
			vertical-align top
			.thumb
				none()
		.volume
			none()
	.label
		block()	
		margin-top 0px
		margin-left 50px	
		
unselectable()
	cursor default
	-webkit-user-select: none;  /* Chrome all / Safari all */
	-moz-user-select: none;     /* Firefox all */
	-ms-user-select: none;      /* IE 10+ */
	user-select: none;

#rv-player-new
	block-relative()
	width 100%
	border-top 1px solid #f7f7f7
	padding 8px 0
	background-color $lead
	
	.holder
		block-relative()
		max-width 1280px
		margin 0 auto
		.logo
			relative()
			dimensions(20px, 20px)
			display inline-block
			top 2px
			margin-right 12px
		
		.controls
			relative()
			vertical-align top
			display inline-block
			.toggle
				set_font('Lato', 12px, 20px, white, left, uppercase)
				relative()
				background-color transparent
				cursor pointer
				border 0
				display inline-block
				&:focus
					outline 0 none
				
			.volume
				relative()
				dimensions(20px, 20px)
				display inline-block
				margin-right -1px
				margin-left 15px
				top 4px
				&:before
					block-relative()
					set_font('vz', 16px, 16px, #fff, left, uppercase)
					cursor pointer
					z-index 1
					content '\e07f'
				&.mid_volume
					&:before
						content '\e07e'
				&.muted
					&:before
						content '\e080'
				.hit
					block-absolute()
					dimensions(30px, 43px)
					cursor pointer
					top -13px
					left -7px
					
			a
				relative()
				set_font('Lato', 16px, 16px, #fff, left)
				cursor pointer
				margin-left 6px
				top 2px
				text-decoration none
				display inline-block
				.show-name
					font-weight 700
				.thumb img
					relative()
					margin-right 5px
					margin-left 5px
					height 24px
					//background-color #fff
					//padding 1px 3px 3px
					vertical-align middle
					top -2px
				&:hover
					text-decoration underline
			
		.label
			relative()
			set_font('Lato', 14px, 14px, #fff, left)
			top -2px
			margin-left 10px
			font-weight 400
			display inline-block
			&:before
				relative()
				set_font('vz', 16px, 22px, #fff, left, uppercase)
				vertical-align bottom
				top 5px
				margin-right 4px
				display inline-block
				content '\e084'

		.schedule
			block-absolute()
			set_font('Lato', 15px, 15px, #fff, left)
			roundborder(2px)
			transition(.2s, linear)
			none()
			top -1px
			right 0
			background-color $orange
			padding 5px 8px 7px 8px
			text-decoration none
			&:hover
				background-color #b94010
	*
		font-weight normal
		-webkit-font-smoothing antialiased		
	&[data-type=box]
		height 160px
		.holder
			mobileHolder()
			height 100%
			.controls
				z-index 0
				padding-left 0
				
				.toggle
					block-absolute()
					z-index 1
					padding: 0
					top 86px
					height 71px
					span
						relative()
						top 25px
					&:before
						left 21px
					&:after
						left 8px
					&.playing:before
						left 18px
				.show-info 
					//margin-left 10px
					.show-name
						block-relative()
						padding 5px 0 2px 0
						margin-left 70px
						margin-top -81px
					.thumb
						block-relative()
						z-index 0
						overflow hidden
						width 300px
						height 155px//75px
						margin-bottom 5px
						img
							top -10px
							margin: 0
							width 300px
							height auto
						&:before
							dimensions(100%, 77px, $lead)
							block-absolute()
							opacity(.8)
							z-index 1
							bottom 0
							left 0
							content ''
						
			.label
				margin-left 70px
				z-index 1
	

@media all and (max-width: 767px)
	#rv-player-new:not([data-type=box])
		padding-top 8px
		.holder
			mobileHolder()
			

@media all and (min-width: 768px)
	#rv-player-new:not([data-type=box]) .holder
		.controls
			*
				unselectable()			
			padding-left 24px
			.toggle
				roundborder(0 6px 6px 0)
				padding 0 10px
				height 20px
				background-color $orange
				&:before
					block-absolute()
					dimensions(24px, 20px, #d7d7d7)
					roundborder(2px 0 0 2px)				
					color $lead
					font-family vz
					top 0
					left -24px
					text-indent 8px
					content '\e077'
				&.playing:before
					text-indent 6px
					content '\e078'
				
			.volume
				.slider
					block-relative()
					dimensions(40px, 110px, $lead)
					none()
					left -12px
					top -132px
					z-index 0
					.progress_bg
						block-relative()
						dimensions(10px, 85px, #fff)
						roundborder(5px)
						top 15px
						left 15px
						
					.progress
						block-absolute()
						dimensions(100%, 100%, $orange)
						roundborder(5px)
						border-top 2px solid $orange
						bottom -1px
						left 0
					
					.dragger_holder
						block-relative()
						dimensions(10px, 76px/*, white*/)
						roundborder(5px)
						//opacity(.5)
						padding-bottom 10px
						top -70px
						left 15px
							
					.dragger
						block-relative()
						dimensions(8px, 8px, white)
						roundborder(10px)
						//margin-top -8px
						cursor pointer
						left -1px
						border 2px solid $orange
						z-index 1
				
				&:hover
					.slider
						block()
						
		.label
			relative()
			display inline-block
		.schedule
			block()


@media all and (max-width: 1299px)
	#rv-player-new .holder
		margin 0 10px
		
				
